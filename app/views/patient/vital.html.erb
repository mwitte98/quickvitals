<% provide(:title, "#{@patientName} #{@vitalName}") %>
<body>
	<div class="container">
		<h1><%= @vitalName %></h1>
		<div id="vitalChart"></div>
		<table class="table">
			<thead>
				<tr>
					<th>Date</th>
					<th>Time</th>
					<th>Value</th>
				</tr>
			</thead>
			<tbody>
					<% @patientVital.each do |vitalSign| %>
						<tr>
							<td>
								<%= "#{vitalSign[:time].strftime('%b %d')}" %>
							</td>
							<td>
								<%= "#{vitalSign[:time].strftime('%I:%M%p')}" %>
							</td>
							<td>
								<%= "#{vitalSign[:value]}" %>
							</td>
						</tr>
					<% end %>
			</tbody>
		</table>
		<br>
		<%= link_to "Add measurement", vital_path(@patientID, @vitalID), {class: "btn btn-md btn-primary"} %>
	</div>
	<script type="text/javascript">
		$(document).ready(function() {
			var vitalData = JSON.parse(<%= raw @formattedData.to_json %>);
			var format = d3.time.format('%I:%M%p');

			var chart = c3.generate({
		    bindto: '#vitalChart',
		    data: {
					x: 'x',
		      columns: [
						['x'].concat(_.map(vitalData, function(d) { return new Date(d.date); })),
		        ["<%= @vitalName  %>"].concat(_.pluck(vitalData, 'value'))
		      ]
		    },
				axis: {
					x: {
						label: 'Time',
						type: 'timeseries',
						tick: {
							format: '%I:%M%p'
						}
					},
					y: {
						label: "<%= @vitalName  %>"
					}
				}
			});
		});
	</script>
</body>
